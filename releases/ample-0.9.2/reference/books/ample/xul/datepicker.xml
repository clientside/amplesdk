<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="datepicker">
	<abstract>
		<locale>
			An element rendered as a textbox and a button beside.
			When user presses/clicks the button a datepicker-pane opens in a popup where
			user can pick date from.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes>
			<attribute name="disabled">
				<description>
					<locale>
						Indicates whether the element is disabled or not.
					</locale>
				</description>
			</attribute>
			<attribute name="value" readonly="false">
				<description>
					<locale>
						The initial value of the datepicker in the form YYYY-MM-DD.
					</locale>
					<locale xml:lang="ru">
						Содержит значение компонента.
					</locale>
				</description>
			</attribute>
			<attribute name="min" default="0" readonly="false">
				<description>
					<locale>
						Minimal allowed value.
					</locale>
					<locale xml:lang="ru">
						Задает минимальное значение диапазона.
					</locale>
				</description>
			</attribute>
			<attribute name="max" readonly="false">
				<description>
					<locale>
						Maximal allowed value.
					</locale>
					<locale xml:lang="ru">
						Задает максимальное значение диапазона.
					</locale>
				</description>
			</attribute>
		</attributes>
		<methods />
		<properties />
		<events>
			<event name="change" group="Event" cancelable="false" bubbles="true">
				<description>
					<locale>
						Fires when user selects a new date.
					</locale>
					<locale xml:lang="ru">
						Загорается при изменении значения компонента.
					</locale>
				</description>
			</event>
		</events>
	</members>
</element>