<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="timepicker">
	<abstract>
		<locale>
			The timepicker is used to allow the user to enter a time. It contains three fields to enter the hour, minute and second.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes>
			<attribute name="value" readonly="false">
				<description>
					<locale>
						The initial value of the <link type="element">timepicker</link> in either the form HH:MM:SS or HH:MM.
					</locale>
					<locale xml:lang="ru">
						Содержит значение компонента.
					</locale>
				</description>
			</attribute>
			<attribute name="disabled">
				<description>
					<label>
						Indicates whether the element is disabled or not.
					</label>
				</description>
			</attribute>
			<attribute name="min" default="0" readonly="false">
				<description>
					<locale>
						Minimal allowed value.
					</locale>
					<locale xml:lang="ru">
						Задает минимальное значение диапазона.
					</locale>
				</description>
			</attribute>
			<attribute name="max" readonly="false">
				<description>
					<locale>
						Maximal allowed value.
					</locale>
					<locale xml:lang="ru">
						Задает максимальное значение диапазона.
					</locale>
				</description>
			</attribute>
		</attributes>
		<methods />
		<properties />
		<events>
			<event name="change" group="Event" cancelable="false" bubbles="true">
				<description>
					<locale>
						Fires when user selects a new date.
					</locale>
					<locale xml:lang="ru">
						Загорается при изменении значения компонента.
					</locale>
				</description>
			</event>
		</events>
	</members>
</element>