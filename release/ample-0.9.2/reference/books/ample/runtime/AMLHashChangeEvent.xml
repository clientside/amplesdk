<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<object name="AMLHashChangeEvent" extends="runtime:AMLEvent">
	<abstract>
		<locale>
			The HashChangeEvent interface provides specific contextual information associated with Hash Change events.
		</locale>
	</abstract>
	<examples/>
	<members>
		<methods>
			<method name="initHashChangeEvent" type="Void">
				<arguments>
					<argument name="sEventType" type="String" required="true">
						<description>
							<locale>
								Specifies the event type.
							</locale>
							<locale xml:lang="ru">
								Указывает на тип события (Event.type).
							</locale>
						</description>
					</argument>
					<argument name="bCanBubble" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event can bubble.
							</locale>
							<locale xml:lang="ru">
								Указывает, может ли событие распространяться в фазе "bubbling".
							</locale>
						</description>
					</argument>
					<argument name="bCancelable" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event's default action can be prevented.
							</locale>
							<locale xml:lang="ru">
								Указывает, возможно ли отменить ответную реакцию браузера по умолчанию на событие.
							</locale>
						</description>
					</argument>
					<argument name="sOldUrl" type="String" required="true">
						<description>
							<locale>
								Previous location href value.
							</locale>
						</description>
					</argument>
					<argument name="sNewUrl" type="String" required="true">
						<description>
							<locale>
								New location href value.
							</locale>
						</description>
					</argument>
				</arguments>
				<description>
					<locale>
						The initHashChangeEvent method is used to initialize the value of a HashChangeEvent object.
					</locale>
				</description>
			</method>
		</methods>
		<properties>
			<property name="oldURL" type="String" readonly="true">
				<description>
					<locale>
						Specifies previous location href value.
					</locale>
				</description>
			</property>
			<property name="newURL" type="String" readonly="true">
				<description>
					<locale>
						Specifies new location href value.
					</locale>
				</description>
			</property>
		</properties>
		<constants />
	</members>
	<remarks>
		<remark>
			<locale>Events of that type:</locale>
			<locale xml:lang="ru">События этого типа:</locale>
			<ul>
				<li><link type="event" href="runtime:mHistory">hashchange</link></li>
			</ul>
		</remark>
	</remarks>
	<examples />
</object>